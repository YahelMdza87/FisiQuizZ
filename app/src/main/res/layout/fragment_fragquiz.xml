<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#110000"
    tools:context=".fragquiz">
    <TextView
        android:id="@+id/txtv_tit_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â¡Hola, Bienvenido!"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:textSize="34sp"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:layout_marginTop="80dp"
        />
    <TextView
        android:textColor="#FFFFFF"
        android:id="@+id/txtv_desc_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_alignTop="@+id/txtv_tit_quiz"
        android:layout_marginTop="70dp"
        android:textSize="26sp"
        android:layout_centerHorizontal="true"
        android:text="Bienvenido al area de quiz, en esta seccion te pondremos problemas y preguntas de teoria a ver que tal andas en fisica, intenta responder la maxima cantidad de respuestas correctas, mucha suerte y exito."
        />
    <TextView
        android:textColor="#FFFFFF"
        android:id="@+id/txtv_record_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtv_desc_quiz"

        />
    <Button
        android:textColor="#FFFFFF"
        android:background="@drawable/button_border"
        android:id="@+id/btn_ini_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtv_record_quiz"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Comenzar"
        android:textSize="15sp"
        />



</RelativeLayout>